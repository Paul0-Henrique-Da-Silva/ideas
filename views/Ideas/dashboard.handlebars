<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/ideas/add" class="btn">Criar Ideia</a>
    </div>
    <h3> Suas Ideias</h3>
    <ul>
        {{#each ideas}}
        <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
              <a href="/ideas/edit/{{this.id}}" class="btn">Editar</a>
              <form action="/ideas/remove" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="submit" value="Excluir" class="btn">
              </form>
            </span>
        </li>
        {{/each}}
    </ul>
    {{#if emptyIdeas}}
      <p>Ainda não há nenhuam Ideia, comece criar <a href="/ideas/add">por aqui!</a></p>
    {{/if}}
</div>